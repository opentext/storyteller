		  <stl:repeater xpath='//book'>
			<stl:row h='30pt'>
			  <stl:cell class='even-trow'>
				<stl:p>
				  <stl:field xpath='date'/>
				</stl:p>
			  </stl:cell>
			  <stl:cell class='even-trow'>
				<stl:p>
				  <stl:field xpath='author'/>
				</stl:p>
			  </stl:cell>
			  <stl:cell class='even-trow'>
				<stl:p>
				  <stl:field xpath='title'/>
				</stl:p>
			  </stl:cell>
			  <stl:cell class='even-trow'>
