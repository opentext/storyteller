		  <title>?</title>
		  <genre>?</genre>
		  <price>?</price>
		  <pages>?</pages>
		  <date>?</date>
		  <review>?</review>
		</book>
		<chartdata id='table1'>
		  <ddi:header>
			<ddi:cell data_type='number'>Year</ddi:cell>
			<ddi:cell data_type='number' data_style='stroke:#ff0000'>Price</ddi:cell>
			<ddi:cell data_type='number' data_style='stroke:#0000ff'>Pages</ddi:cell>
