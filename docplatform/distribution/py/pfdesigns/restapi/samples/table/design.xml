	<stl:transformation>
	  <tdt:transformation version='1.0' xmlns:tdt='http://developer.opentext.com/schemas/storyteller/transformation/tdt'>
		<tdt:rule path='/data/book'>
		  <tdt:value key='.'>/data/book</tdt:value>
		  <tdt:value key='recurse'>.</tdt:value>
		</tdt:rule>
		<tdt:rule path='/data/book/date'>
		  <tdt:value key='.'>published</tdt:value>
		  <tdt:value key='text()'>concat(@year,'/', @month,'/', @day)</tdt:value>
		</tdt:rule>
		<tdt:rule path='/data/book/genre'>
		  <tdt:value key='$id'>@genre</tdt:value>
		  <tdt:value key='.'>.</tdt:value>
		  <tdt:value key='text()'>tdt:template()/data/genres/genre[@id=$id]</tdt:value>
		</tdt:rule>
		<tdt:rule path='/data/genres'>
		  <tdt:value key='.'>tdt:nodeset()</tdt:value>
		</tdt:rule>
		<tdt:rule path='/data/chartdata/ddi:row'>
		  <tdt:value key='$green'>round(position() * 200 div count(/data/book))</tdt:value>
		  <tdt:value key='.'>/data/book</tdt:value>
		</tdt:rule>
		<tdt:rule path='/data/chartdata/ddi:row/ddi:cell[1]'>
		  <tdt:value key='text()'>published/@year</tdt:value>
		</tdt:rule>
		<tdt:rule path='/data/chartdata/ddi:row/ddi:cell[2]'>
		  <tdt:value key='@data_style'>concat('fill:rgb(255,',$green,',0)')</tdt:value>
		  <tdt:value key='text()'>price</tdt:value>
		</tdt:rule>
		<tdt:rule path='/data/chartdata/ddi:row/ddi:cell[3]'>
		  <tdt:value key='@data_style'>concat('fill:rgb(0,',$green,',255)')</tdt:value>
		  <tdt:value key='text()'>pages</tdt:value>
		</tdt:rule>
	  </tdt:transformation>
	</stl:transformation>
