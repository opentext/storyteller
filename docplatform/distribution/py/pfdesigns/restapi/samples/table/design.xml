			  <stl:cell colspan='6' class='odd-trow'>
				<stl:p>
				  <stl:span style='font-weight:bold;'>Review:</stl:span> 
				  <stl:field xpath='review'/>
				</stl:p>
			  </stl:cell>
			</stl:row>
		  </stl:repeater>
		</stl:story>
	  </stl:table>
	</stl:story>
	<stl:page w='595pt' h='842pt' occurrence='repeatable'>
	  <stl:text story='Main' x='5%' y='5%' w='90%' h='90%'/>
	</stl:page>
  </stl:document>
</stl:stl>
