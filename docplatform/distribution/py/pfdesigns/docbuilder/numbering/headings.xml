<stl:stl xmlns:stl="http://developer.opentext.com/schemas/storyteller/layout" version="0.1">
  <stl:style>
    .h1::marker {
      color: red;
      -stl-counter: counter 0 "%0!R. ";
    }

    .h2::marker {
      color: red;
      -stl-counter: counter 1 "%0!R.%1!1 ";
    }

    .h3::marker {
      color: red;
      -stl-counter: counter 2 "%0!R.%1!1 %2!a) ";
    }
  </stl:style>
  <stl:document>
    <stl:story>
      <stl:p class="h1">Chapter</stl:p>
      <stl:p class="h2">Section</stl:p>
      <stl:p class="h2">Section</stl:p>
      <stl:p class="h3">Subsection</stl:p>
      <stl:p class="h3">Subsection</stl:p>
      <stl:p class="h1">Chapter</stl:p>
      <stl:p class="h2">Section</stl:p>
      <stl:p class="h3">Subsection</stl:p>
      <stl:p class="h2">Section</stl:p>
      <stl:p class="h3">Subsection</stl:p>
    </stl:story>
  </stl:document>
</stl:stl>
