<stl:stl xmlns:stl="http://developer.opentext.com/schemas/storyteller/layout" version="0.1">
  <stl:style>
    .span1 {
      font-family: Lato;
      font-size: 10pt
    }
    .table1 {
      border: 0.001in solid #000000;
      display: table
    }
    .row1 {
      -stl-shape-resize: free 0pt max 0pt max
    }
    .p1 {
      text-align: center
    }
  </stl:style>
  <stl:document>
    <stl:story name="Main" w="8.5in">
      <stl:p><stl:span class="span1">Hello</stl:span></stl:p>
      <stl:p><stl:table class="table1">
          <stl:story>
            <stl:row h="0.25in" class="row1">
              <stl:cell w="1in">
                <stl:p class="p1"><stl:span class="span1">Open</stl:span></stl:p>
              </stl:cell>
              <stl:cell w="1in">
                <stl:p class="p1"><stl:span class="span1">Text</stl:span></stl:p>
              </stl:cell>
            </stl:row>
          </stl:story>
        </stl:table></stl:p>
      <stl:p><stl:span class="span1">!</stl:span></stl:p>
    </stl:story>
  </stl:document>
</stl:stl>