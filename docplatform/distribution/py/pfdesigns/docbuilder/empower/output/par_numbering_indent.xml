<stl:stl xmlns:stl="http://developer.opentext.com/schemas/storyteller/layout" version="0.1">
  <stl:style>
    .p1 {
      -stl-list-counter: default_counter;
      -stl-list-level: 0;
      -stl-list-mask: %0!1.\9;
      -stl-tabs: 0.25in;
      margin-left: 0in
    }
    .p2 {
      -stl-list-counter: default_counter;
      -stl-list-level: 1;
      -stl-list-mask: %1!1.\9;
      -stl-tabs: 0.5in;
      margin-left: 0.25in
    }
    .p3 {
      -stl-list-counter: default_counter;
      -stl-list-level: 2;
      -stl-list-mask: %2!r.\9;
      -stl-tabs: 0.75in;
      margin-left: 0.5in
    }
    .span1 {
      font-family: Lato;
      font-size: 10pt
    }
  </stl:style>
  <stl:document>
    <stl:story name="Main" w="8.5in">
      <stl:p class="p1"><stl:span class="span1">Hello</stl:span></stl:p>
      <stl:p class="p2"><stl:span class="span1">Opentext</stl:span></stl:p>
      <stl:p class="p3"><stl:span class="span1">!</stl:span></stl:p>
    </stl:story>
  </stl:document>
</stl:stl>