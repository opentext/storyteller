<stl:stl xmlns:stl="http://developer.opentext.com/schemas/storyteller/layout" version="0.1">
  <stl:style>
    .span1 {
      font-family: Lato;
      font-size: 10pt
    }
    .span2 {
      color: #0000C4;
      font-family: Lato;
      font-size: 10pt;
      text-decoration: underline
    }
  </stl:style>
  <stl:document>
    <stl:story name="Main" w="8.5in">
      <stl:p><stl:span class="span1">Hello <stl:span/></stl:span><stl:scope hyperlink="http://www.opentext.com">
          <stl:story><stl:span class="span2">Opentext</stl:span>
          </stl:story>
        </stl:scope><stl:span class="span1">!</stl:span></stl:p>
    </stl:story>
  </stl:document>
</stl:stl>