<stl:stl xmlns:stl="http://developer.opentext.com/schemas/storyteller/layout" version="0.1">
  <stl:style>
    .span1 {
      font-family: Lato;
      font-size: 10pt
    }
    .text1 {
      -stl-shape-resize: free 0pt max 0pt max;
      background-color: #FFC8C8;
      border: 1px solid #0000FF;
      padding-bottom: 0.15in;
      padding-left: 0.1in;
      padding-right: 0.25in;
      padding-top: 0.2in
    }
  </stl:style>
  <stl:document>
    <stl:story name="Main" w="8.5in">
      <stl:p><stl:span class="span1">Hello <stl:span/></stl:span><stl:text w="1in" h="1in" class="text1">
          <stl:story>
            <stl:p><stl:span class="span1">Opentext</stl:span></stl:p>
          </stl:story>
        </stl:text><stl:span class="span1">!</stl:span></stl:p>
    </stl:story>
  </stl:document>
</stl:stl>