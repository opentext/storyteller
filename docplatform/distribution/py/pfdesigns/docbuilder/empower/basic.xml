<stl:stl xmlns:xp="http://developer.opentext.com/schemas/storyteller/xmlpreprocessor"
		 xmlns:stl="http://developer.opentext.com/schemas/storyteller/layout" version="0.1">
  <stl:data>
	<stl:source key="_default">
	  <data>
		<input>empty</input>
		<input>hell</input>
		<input>hello</input>
		<input>hello_colors</input>
		<input>hello_euro</input>
		<input>hello_image</input>
		<input>hello_hyperlink</input>
		<input>hello_sub_super_script</input>
		<input>hello_font</input>
		<input>hello_sizes</input>
		<input>hello_world</input>
		<input>hello_world_red</input>
		<input>hello_world_lrc</input>
		<input>hello_world_bullets</input>
		<input>hello_world_numbering</input>
		<input>hello_world_numbering_indented</input>
		<input>hello_world_nested</input>
		<input>hello_table</input>
      </data>
	</stl:source>
  </stl:data>
  <stl:document>
	<stl:story name="Body">
	  <stl:repeater xpath="/data/input">
		<stl:story>
		  <stl:p>===================== <stl:field xpath="."/> =====================</stl:p>
		  <stl:content uri="wd:/empty.xml" selector="/story[1]">
			<stl:script language="js">
			  'use strict';
			  var empower = require('wd:/empower');
			  var item = require('layout').item();
			  var input = require('data').dump('string(.)');
			  item.Uri = empower.convert(input);
			</stl:script>
		  </stl:content>
		</stl:story>
	  </stl:repeater>
	</stl:story>
	<stl:page w="540pt" h="800pt">
	  <stl:text x="20pt" y="20pt" w="500pt" h="760pt" story="Body" style="fill:lightcyan"/>
	</stl:page>	
  </stl:document>
</stl:stl>
