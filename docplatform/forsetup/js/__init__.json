{
    "modules": {
        "basepath" : "wd:/",
        "suffixes" : [ "", ".js", ".json", "/index.js", "/index.json" ],
        "core" : {
            "__init__"   : "stinst:/js/__init__.json",
            "share"      : "stinst:/js/core/share.js",
            "range"      : "stinst:/js/core/range.js",
            "process"    : "stinst:/js/core/process.js",
            "vars"       : "stinst:/js/core/vars.js",
            "layout"     : "stinst:/js/core/layout.js",
            "data"       : "stinst:/js/core/data.js",
            "repo"       : "stinst:/js/core/repo.js",
            "streams"    : "stinst:/js/core/streams.js",
            "units"      : "stinst:/js/core/units.js",
            "i18n"       : "stinst:/js/core/i18n.js",
            "services"   : "stinst:/js/core/services.js",

            "buffer"     : "stinst:/js/core/buffer",
            "ieee754"    : "stinst:/js/core/ieee754",
            "base64-js"  : "stinst:/js/core/base64js",

            "util"       : "stinst:/js/core/node/util.js",
            "console"    : "stinst:/js/core/node/console.js",
            "path"       : "stinst:/js/core/node/path.js",
            "url"        : "stinst:/js/core/node/url.js",
            "assert"     : "stinst:/js/core/node/assert.js",
            "events"     : "stinst:/js/core/node/events.js",
            "punycode"   : "stinst:/js/core/node/punycode.js",
