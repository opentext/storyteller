            "xmldom"     : "stinst:/js/core/xmldom/dom-parser.js",
            "xpath"      : "stinst:/js/core/xpath/xpath.js",

            "charts"     : "stinst:/js/tools/charts.js",
            "jslint"     : "stinst:/js/tools/jslint/jslint.js",
            "stl"        : "stinst:/js/tools/stl.js",
            "empower"    : "stinst:/js/tools/empower.js",
            "empower.json": "stinst:/js/tools/empower.json",

            "accounting" : "stinst:/js/libs/accounting/accounting.js",
            "cheerio"    : "stinst:/js/libs/cheerio",
            "d3"         : "stinst:/js/libs/d3/d3.js",
            "dateformat" : "stinst:/js/libs/dateformat/dateformat.js",
            "he"         : "stinst:/js/libs/he/he.js",
            "js-sha1"    : "stinst:/js/libs/js-sha1/src/sha1.js",
            "jsdom"      : "stinst:/js/libs/jsdom/lib/jsdom.js",
            "jszip"      : "stinst:/js/libs/jszip/jszip.js",
            "juice2"     : "stinst:/js/libs/juice2",
            "markup-js"  : "stinst:/js/libs/markup-js",
            "markup-js/dates": "stinst:/js/libs/markup-js/dates.js",
            "markup-js/i18n" : "stinst:/js/libs/markup-js/i18n.js",
            "moment"     : "stinst:/js/libs/moment",
            "money"      : "stinst:/js/libs/money/money.js",
            "nvd3"       : "stinst:/js/libs/nvd3/build/nv.d3.js",
            "onecolor"   : "stinst:/js/libs/onecolor",
            "babyparse"  : "stinst:/js/libs/babyparse/babyparse.js",
            "png-js"     : "stinst:/js/libs/png-js/png.js",
            "underscore" : "stinst:/js/libs/underscore/underscore.js",
            "xml-writer" : "stinst:/js/libs/xml-writer"
        }
    },
    "data" : {
        "xml2js" : {
            "defaults" : {
                "async": false,
                "explicitRoot": false,
                "explicitArray": false,
                "mergeAttrs": true,
                "parseNumbers": true
            }
        },
        "xml" : {
            "root" : "tdt:root",
            "alias" : "xmlns:tdt",
            "ns": "http://developer.opentext.com/schemas/storyteller/transformation/tdt"
        }
    },
    "jslint" : {
        "enabled": true,
        "options": {
            "node": true,
            "es6": true
        },
        "suppress" : [
            "stinst:/js/core/node/",
            "stinst:/js/core/xmldom/",
            "stinst:/js/core/xml2js/",
            "stinst:/js/core/sax/",
            "stinst:/js/core/xpath/",

            "stinst:/js/libs/"
        ]
    }
}
